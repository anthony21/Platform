<div x-data="{ showPanel: window.innerWidth >= 1024 }" class="lg:w-1/3 xl:w-1/4 2xl:w-1/5">
  <button
    type="button"
    class="absolute top-0 right-0 mt-4 mr-4 flex lg:hidden items-center justify-center text-sm z-20 text-gray-600 dark:text-gray-300 h-8 w-8 rounded-full hover:bg-gray-200 dark:hover:bg-gray-600"
    @click="showPanel = !showPanel"
    >
    <%= icon name: 'chevron-left', 'x-show' => '!showPanel' %>
    <%= icon name: 'xmark', 'x-show' => 'showPanel' %>
  </button>
  <div
    class="flex flex-col absolute lg:relative right-0 h-full w-full sm:w-2/3 lg:w-full shadow lg:shadow-none bg-white dark:bg-gray-900 focus:outline-none z-10 pt-8 lg:border-l border-gray-200 dark:border-gray-800"
    x-on:resize.window.throttle="showPanel = window.innerWidth >= 1024"
    x-show="showPanel"
    x-transition:enter="transition ease-out duration-200"
    x-transition:enter-start="transform translate-x-full"
    x-transition:enter-end="transform translate-x-0"
    x-transition:leave="transition ease-in duration-200"
    x-transition:leave-start="transform translate-x-0"
    x-transition:leave-end="transform translate-x-full"
    @click.away="showPanel = window.innerWidth >= 1024"
  >
    <%= content %>
  </div>
</div>
