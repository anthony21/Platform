<div class="mb-2 flex items-center <%= @required ? 'pr-6' : 'pr-8' %>">
  <div class="leading-5 text-gray-700 dark:text-gray-300 font-semibold">
    <%= @form.label @field, @label %>

    <% if @help_text.present? %>
      <p class="mt-1 text-sm font-medium text-gray-500"><%= @help_text %></p>
    <% end %>
  </div>

  <% if @required %>
    <span class="font-mono text-sm text-red-500 ml-2">*</span>
  <% end %>
</div>
