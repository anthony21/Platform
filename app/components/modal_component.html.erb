<div data-controller="modal" data-modal-id-value="<%= @id %>">
  <div
    class="fixed bottom-0 top-0 inset-x-0 px-4 pb-6 sm:inset-0 sm:p-0 sm:items-center sm:justify-center hidden z-40"
    data-modal-target="container"
    >
    <div
      class="fixed inset-0 transition-opacity opacity-0 ease-in duration-200"
      data-modal-target="background"
      data-action="click->modal#hide"
      >
      <div class="absolute inset-0 bg-gray-500 dark:bg-gray-800 opacity-75"></div>
    </div>
    <div
      class="relative bg-white dark:bg-gray-900 px-4 pt-5 pb-4 overflow-scroll shadow-xl transform transition-all sm:p-6 ease-in duration-200 opacity-0 translate-y-4 sm:translate-y-0 sm:scale-95 z-50 rounded-lg max-h-screen <%= @options[:class] %>"
      data-modal-target="panel"
      >
      <a
        href="#"
        id="hide-<%= @id %>"
        class="absolute right-0 top-0 px-2 mr-2 mt-2 rounded-full hover:bg-gray-100 dark:hover:bg-gray-700"
        data-action="click->modal#hide"
        >
        <%= icon name: 'xmark', class: 'h-5 w-5' %>
      </a>

      <%= content %>
    </div>
  </div>
</div>
