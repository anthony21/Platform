<div class="bg-white dark:bg-gray-900 flex items-center justify-between px-8 mb-32 rounded-b-lg border-t border-gray-100 dark:border-gray-800 overflow-hidden">
  <div class="text-gray-500 dark:text-gray-400 py-4">
    <%= page_entries_info %>
  </div>
  <% if @pagy.pages > 1 %>
    <nav class="flex items-center justify-between" role="navigation" aria-label="pager">
      <div class="flex-1">
        <% if @pagy.prev %>
          <%= link_to pagy_url_for(@pagy, @pagy.prev), class: 'inline-block text-gray-500 dark:text-gray-400 hover:text-gray-700 dark:hover:text-gray-200 px-2 py-4' do %>
            <%= icon name: 'chevron-left', class: 'h-4 w-4 mt-1.5' %>
          <% end %>
        <% end %>
      </div>
      <div class="hidden sm:inline-flex items-center">
        <% @pagy.series.each do |item| %>
          <% case item when Integer %>
            <%= link_to item, pagy_url_for(@pagy, item), class: "inline-block px-2 py-4 text-gray-600 dark:text-gray-400 hover:text-gray-700 dark:hover:text-blue" %>
          <% when String %>
            <span class="inline-block px-1 mx-1 text-blue font-medium"><%= item %></span>
          <% when :gap %>
            <span class="text-gray-400 mx-1"><%= t('views.pagination.truncate').html_safe %></span>
          <% end %>
        <% end %>
      </div>
      <div class="flex-1 text-right">
        <% if @pagy.next %>
          <%= link_to pagy_url_for(@pagy, @pagy.next), class: 'inline-block text-gray-600 dark:text-gray-400 hover:text-gray-700 dark:hover:text-gray-200 px-2 py-4' do %>
            <%= icon name: 'chevron-right', class: 'h-4 w-4 mt-1.5' %>
          <% end %>
        <% end %>
      </div>
    </nav>
  <% end %>
</div>
