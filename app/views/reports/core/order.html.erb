<%= title t('reports.order') %>

<div class="px-4 sm:px-0">
  <div class="mb-10">
    <%= form_with url: '/reports/core/order', local: true, method: :get do |form| %>
      <div class="flex items-center">
        <%= form.date_field :start_at, value: @report.start_at.to_date, class: field_classes %>
        <span class="font-mono mx-2">to</span>
        <%= form.date_field :end_at, value: @report.end_at.to_date, class: field_classes %>
        <%= render ButtonComponent.new(text: 'Update', type: :submit, icon: 'arrows-rotate', color: :gray, show_loading: true, name: nil, classes: 'ml-2 py-3') %>
      </div>
    <% end %>
  </div>

  <div
    data-controller="charts--user-bar"
    data-charts--user-bar-url-value="/reports/core/order.json?<%= request.query_parameters.to_query %>"
    >
    <div data-charts--user-bar-target="chart" class="h-96"></div>
  </div>

  <%= render 'links' %>
</div>
